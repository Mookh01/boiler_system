  <h1 style="margin-left: 30px;">PLEASE Signup:</h1>
  <!--? insert role="form"-->
  <form action="/auth/signup" method="post">
    <fieldset class="form-group">
      <label>Username:</label>
      <textarea name="username" type="text" placeholder="Enter a Username" required class="form-control input-sm"></textarea>
    </fieldset>
    <fieldset class="form-group">
      <label>Password:</label>
      <textarea name="password" type="password" placeholder="Enter Password" required class="form-control input-sm"></textarea>
    </fieldset>
    <!--a.btn.btn-primary(href="") Submit-->
    <fieldset class="form-group">
      <label>Confirm Password:</label>
      <textarea name="password2" type="password2" placeholder="Enter Password" required class="form-control input-sm"></textarea>
    </fieldset>
    <button type="submit" value="Log In" class="btn btn-primary">Submit</button><a href="/" class="btn btn-default">Cancel</a>
  </form>
